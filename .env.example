# ============================================
# HypnoRaffle Environment Configuration
# Copy this file to .env.local and fill in values
# ============================================

# --------------------------------------------
# Database Configuration
# --------------------------------------------
POSTGRES_USER=hypnoraffle
POSTGRES_PASSWORD=change_this_secure_password_123!
POSTGRES_DB=hypnoraffle

# --------------------------------------------
# PostgREST / API Configuration
# --------------------------------------------
# URL for the PostgREST API (from browser perspective)
NEXT_PUBLIC_POSTGREST_URL=http://localhost:3001

# JWT Secret for PostgREST authentication
# IMPORTANT: Generate a secure secret for production (min 32 chars)
# You can generate one with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars!!

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:9002,http://localhost:3000

# --------------------------------------------
# Application Configuration
# --------------------------------------------
# Public URL of your application
NEXT_PUBLIC_APP_URL=http://localhost:9002
PUBLIC_URL=http://localhost:9002

# Optional: Webhook URL for winner notifications
NEXT_PUBLIC_WINNER_WEBHOOK_URL=

# --------------------------------------------
# Cloudflare Tunnel (Optional - for internet access)
# --------------------------------------------
# Get this from: https://one.dash.cloudflare.com/
# Create a tunnel and copy the token
CLOUDFLARE_TUNNEL_TOKEN=

